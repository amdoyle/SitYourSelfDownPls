
<h1><%= @restaurant.name %></h1>

<% if !current_owner && !current_user %>
  <p>Please <%= link_to "Log in", new_session_path %> or <%= link_to "Sign Up", new_user_path %>
    to make reservations.</p>
<% end %>
<p><%= link_to @restaurant.url, @restaurant.url %></p>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= image_tag(@restaurant.picture) %></p>
<p><%= @restaurant.description %></p>
<p>Hours of Operation: <%= @restaurant.opening_time %> - <%= @restaurant.closing_time %></p>

  <% if @restaurant.category != nil %>
    <p>Category: <%= @restaurant.category.name %></p>
  <% else %>
  <% end %>

  <% if current_owner %>
    <p>Capacity: <%= @restaurant.capacity %></p>
  <% else %>
  <% end %>

<%= render "price_range" %>

<% if current_user %>
<h4>New Reservation</h4>
<%= render "reservation" %>
<% else %>
<p>Please <%= link_to "Log In", new_session_path %> to make a new reservation.</p>
<% end %>

<%= render "current_user_comments" %>
<%= render "form_review" %>


<% if current_owner %>
  <p><%= link_to "Edit Your Restaurant Listing", edit_restaurant_path %></p>
  <p><%= link_to "Back to Restaurant Listings", restaurants_path %></p>
<% else %>
    <p><%= link_to "Back to Restaurant Listings", restaurants_path %></p>
<% end %>
