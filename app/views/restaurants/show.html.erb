<h1><%= @restaurant.name %></h1>

<% if !current_owner && !current_user %>
  <p>Please <%= link_to "Log in", new_session_path %> or <%= link_to "Sign Up", new_user_path %> to make reservations.</p>
<% end %>

<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= image_tag(@restaurant.picture) %></p>
<p><%= @restaurant.description %></p>
<p><%= @restaurant.opening_time %> - <%= @restaurant.closing_time %></p>

  <% if @restaurant.category != nil %>
    <p><%= @restaurant.category.name %></p>
  <% else %>
  <% end %>

<p><%= @restaurant.capacity %></p>

<%= render "reservation" %>

<%= render "current_user_comments" %>


<% if current_user %>
  <%= render "form_review" %>
<% else %>
<% end %>

<% if current_owner == @restaurant.owner %>
  <p><%= link_to "Edit Your Restaurant Listing", edit_restaurant_path %></p>
<% end %>

<p><%= link_to "Back to Restaurant Listings", restaurants_path %></p>
