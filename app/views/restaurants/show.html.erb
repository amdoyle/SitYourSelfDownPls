

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= @restaurant.name %></title>
  <%= stylesheet_link_tag "restaurant_page.css" %>
</head>
<body>

<h1><%= @restaurant.name %></h1>

  <% if !current_owner && !current_user %>
    <p>Please <%= link_to "Log in", new_session_path %> or <%= link_to "Sign Up", new_user_path %>
      to make reservations.</p>
  <% end %>

<h1><%= @restaurant.name %></h1>

<% if !current_owner && !current_user %>
  <p>Please <%= link_to "Log in", new_session_path %> or <%= link_to "Sign Up", new_user_path %>
    to make reservations.</p>
<% end %>

<div class="info">


  <p><%= image_tag(@restaurant.picture) %></p>
  <p><%= link_to @restaurant.url, @restaurant.url %></p>

  <div class="image"><%= image_tag(@restaurant.picture) %></div>

  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <p><%= @restaurant.description %></p>
  <p><%= @restaurant.opening_time %> - <%= @restaurant.closing_time %></p>

  <% if @restaurant.category != nil %>
    <p><%= @restaurant.category.name %></p>
  <% else %>
  <% end %>

  <% if current_owner %>
    <p>Capacity: <%= @restaurant.capacity %></p>
  <% else %>
  <% end %>

<%= render "restaurants/price_range" %>

<% if current_user %>
  <h4>New Reservation</h4>
  <%= render "restaurants/reservation" %>
<% else %>
  <p>Please <%= link_to "Log In", new_session_path %> to make a new reservation.</p>
<% end %>


<%= render @restaurant.reviews %>

<% if current_user %>
  <%= render "form_review" %>
<% else %>
  <p>Only users can add reservations. Please <%= link_to "Log in", new_session_path %> to make a new reservation.</p>
<% end %>
</div>





</body>
</html>
