<h1>Restaurant List</h1>

<p>Please <%= link_to "Log in", new_session_path %> or <%= link_to "Sign Up", new_user_path %> to make reservations.</p>


<% @restaurants.each do |restaurant| %>
  <div class="restaurant">
    <p>
      <%= link_to restaurant.name, "restaurants/#{restaurant.id}" %>
    </p>
    <p>
      <%= restaurant.description %>
    </p>
  </div>

<div class="restaurant">
<%= form_tag(restaurants_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search" %>
  <%= submit_tag "Search" %>
<% end %>
</div>

  <% if params[:search] && @restaurants.empty? %>
    Nothing matched your search terms.
    <%= render "restaurant" %>
  <% else %>
     <%= render "restaurant" %>
  <% end %>
<% end %>
