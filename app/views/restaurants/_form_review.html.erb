<%= form_for ([@restaurant, @review]) do |f| %>

  <div class="field">
    <%= f.label :comment, "Review: " %>
    <%= f.text_area :comment %>
  </div>

  <div class="field">
    <%= f.label :rating, "1 Star"  %>
    <%= f.radio_button(:rating, 1) %>
    <%= f.label :rating, "2 Star"  %>
    <%= f.radio_button(:rating, 2) %>
    <%= f.label :rating, "3 Star"  %>
    <%= f.radio_button(:rating, 3) %>
    <%= f.label :rating, "4 Star"  %>
    <%= f.radio_button(:rating, 4) %>
    <%= f.label :rating, "5 Star"  %>
    <%= f.radio_button(:rating, 5) %>
  </div>

  <div class="action">
    <%= f.submit %>

  </div>



<% end %>
