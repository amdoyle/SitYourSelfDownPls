<h1>Log in</h1>
<% unless current_user || current_owner %>
  <%= form_tag sessions_path do %>
    <div class = "field">
      <%= radio_button_tag(:user_type, "owner") %>
      <%= label_tag(:user_type_owner, "Owner") %>
      <%= radio_button_tag(:user_type, "user") %>
      <%= label_tag(:user_type_user, "User") %>
    </div>
    <div class="field">
      <%= label_tag :email %><br/>
      <%= text_field_tag :email, params[:email] %>
    </div>
    <div class="field">
      <%= label_tag :password %><br/>
      <%= password_field_tag :password %>
    </div>
    <div class="actions"><%= submit_tag "Log in" %></div>
  <% end %>
<% else %>
  <p>Already logged in!</p>

<% end %>
