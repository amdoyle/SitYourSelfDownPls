<h1>Edit Owner</h1>
<% if @owner == current_owner %>
  <%= form_for(@owner) do |f| %>
    <div class = "field">
      <%= f.label :password, "Re-enter password" %>
      <%= f.password_field :password %>
    </div>

    <div class = "field">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>

    <div class = "field">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>

    <div class = "actions">
      <%= f.submit %>
    </div>
  <% end %>
<% else %>
  <p>You don't have permission to edit this owner.</p>
<% end %>
