<h1>Edit Account</h1>

  <% if @user == current_user %>
    <%= form_for @user do |f| %>
    <p>
      <%= f.label :username %><br/>
      <%= f.text_field :username %>
    </p>
    <p>
      <%= f.label :email %><br/>
      <%= f.email_field :email %>
    </p>

    <p>
      <%= f.submit %>
    </p>
    <% end %>
  <% else %>
    <p>You don't have permission to edit this user.</p>
  <% end %>
